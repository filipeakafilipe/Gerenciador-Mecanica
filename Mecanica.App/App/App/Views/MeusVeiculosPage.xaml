<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="App.Views.MeusVeiculosPage"
             Title="{Binding Title}">



    <ScrollView>
        <StackLayout Orientation="Vertical">

            <Label Text="Neymar Junior" FontSize="35" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" TextColor="Black" ></Label>
            <Button x:Name="Veiculos" Text="3 Veículos Cadastrados" HorizontalOptions="FillAndExpand" BackgroundColor="#2296f3" TextColor="White" ></Button>

            <StackLayout Orientation="Horizontal"  HorizontalOptions="Center" >
                <StackLayout Orientation="Vertical"  HorizontalOptions="Start" VerticalOptions="Start">
                    <Image Source="Car" WidthRequest="130"></Image>
                </StackLayout>
                <StackLayout Orientation="Vertical"  HorizontalOptions="End" VerticalOptions="Center">
                    <Button x:Name="Car1" Text="Fiat Palio 1.0" HorizontalOptions="Center" BackgroundColor="White" TextColor="Black" ></Button>
                    <Label Text="2010  63.000km" FontSize="Medium" VerticalTextAlignment="Center" FontAttributes="Bold"></Label>
                    <Label Text="HGX-1357" FontSize="Medium" VerticalTextAlignment="Center" FontAttributes="Bold"></Label>
                </StackLayout>
                
                
            </StackLayout>

            <StackLayout Orientation="Horizontal"  HorizontalOptions="Center" >
                <StackLayout Orientation="Vertical"  HorizontalOptions="Start" VerticalOptions="Start">
                    <Image Source="Car" WidthRequest="130"></Image>
                </StackLayout>
                <StackLayout Orientation="Vertical"  HorizontalOptions="End" VerticalOptions="Center">
                    <Button x:Name="Car2" Text="Ford Ka 1.6" HorizontalOptions="Center" BackgroundColor="White" TextColor="Black"></Button>
                    <Label Text="2014  43.287km" FontSize="Medium" VerticalTextAlignment="Center" FontAttributes="Bold"></Label>
                    <Label Text="QYW-2557" FontSize="Medium" VerticalTextAlignment="Center" FontAttributes="Bold"></Label>
                </StackLayout>

            </StackLayout>
            <StackLayout Orientation="Horizontal"  HorizontalOptions="Center" >
                <StackLayout Orientation="Vertical"  HorizontalOptions="Start" VerticalOptions="Start">
                    <Image Source="Car" WidthRequest="130"></Image>
                </StackLayout>
                <StackLayout Orientation="Vertical"  HorizontalOptions="End" VerticalOptions="Center">
                    <Button x:Name="Car3" Text="Fiat Toro 2.0" HorizontalOptions="Center" BackgroundColor="White" TextColor="Black"></Button>
                    <Label Text="2020  3.287km" FontSize="Medium" VerticalTextAlignment="Center" FontAttributes="Bold"></Label>
                    <Label Text="XXX-1237" FontSize="Medium" VerticalTextAlignment="Center" FontAttributes="Bold"></Label>
                </StackLayout>

            </StackLayout>





        </StackLayout>
    </ScrollView>
</ContentPage>